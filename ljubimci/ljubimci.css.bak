#psi_kontejner, #macke_kontejner, #ribice_kontejner {
	display: flex;
	justify-content: space-between;
	margin: 3%;
}

.psi {
	position: relative;
	background-color: lightgreen;
	padding: 10px 10px 5px;
	display: inline-block;
	border: 1px solid black;
	margin: 0;
}

.macke {
	position: relative;
	background-color: #ff8080;
	padding: 10px 10px 5px;
	display: inline-block;
	border: 1px solid black;
	margin: 0;
}

.ribice {
	position: relative;
	background-color: #80dfff;
	padding: 10px 10px 5px;
	display: inline-block;
	border: 1px solid black;
	margin: 0;
}

.korpa_dugme {
	position: absolute;
	bottom: 5px;
	right: 5px;
}

.korpa_dugme:hover {
	cursor: pointer;
}

.broj_label {
	position: absolute;
	bottom: 30px;
	right: 55px;
}

.broj_dugme {
	position: absolute;
	bottom: 25px;
	right: 5px;
	width: 40px;
	margin-bottom: 5px;
}

#korpa {
	position: relative;
	margin-left: 3%;
	width: 45%;
	height: 400px;
	border: 1px solid gray;
	overflow-y: auto;
}

#korpa_zaglavlje {
	width: 45%;
	border-width: 1px 1px 0;
	border-style: solid;
	border-color: gray;
	margin-left: 3%;
	height: 50px;
	background-image: url("../slike/metal.jpg");
	background-size: 100% 100%;
	text-align: center;
	line-height: 50px;
}

#ukupno {
	text-align: center;
	padding-bottom: 3%;
}

#korpa_ocisti {
	position: absolute;
	margin: 1%;
	width: 98%;
}

#korpa_ocisti:hover {
	cursor: pointer;
}

#omotac_ocisti {
	background-color: white;
	position: relative;
	border-width: 0 1px 1px;
	border-style: solid;
	border-color: gray;
	width: 45%;
	margin-left: 3%;
	height: 30px;
}

#klizac {
	position: relative;
	text-align: center;
	right: 46%;
	background: linear-gradient(to right ,gray, white, gray);
	border: 2px solid gray;
	width: 4%;
	height: 480px;
	float: right;
}

#klizac:hover {
	cursor: pointer;
}

#klizac div > span {
	line-height: 484px;
}

#licni_podaci {
	position: absolute;
	display: none;
	text-align: left;
	left: 104%;
	top: 0;
	width: 400px;
	height: 484px;
	background-color: white;
	cursor: default;
}

#licni_podaci form {
	padding: 4% 2% 5% 10%;
}

#licni_podaci form input {
	float: right;
	margin-top: 4%;
}

#licni_podaci form label {
	line-height: 50px;
}

#greske {
	margin: 8% 2% 5% 10%;
	padding: 2%;
	border: 1px solid red;
	color: red;
	display: none;
}

#sound_button {
	width: 16px;
	height: 16px;
	top: 2px;
	left: 2px;
}

#activated_link {
	background-color: green;
}

.ljubimci {
	width: 200px;
	height: 250px;
}

#responsive_content {
	width: 100%;
	height: 100%;
}

#licni_podaci label span {
	text-decoration: underline;
}

#divide_line {
	border-radius: 50%;
	width: 95%;
	height: 3px;
}

@media only screen and (max-width: 400px), (orientation: landscape) and (max-width: 700px) {
	#psi_kontejner, #macke_kontejner, #ribice_kontejner {
		display: block;
		margin: 0 auto;
		width: 80%;
	}
	
	.psi, .macke, .ribice {
		margin-bottom: 10%;
	}
	
	.psi > img, .macke > img, .ribice > img {
		width: 300px!important;
		height: 400px!important;
	}
	
	.psi:last-child, .macke:last-child {
		margin-bottom: 0;
	}
	
	#korpa, #korpa_zaglavlje, #omotac_ocisti {
		margin-left: 10%;
		width: 80%;
	}
	
	#korpa_zaglavlje {
		margin-top: -50px;
	}
	
	#omotac_ocisti {
		margin-bottom: 100px;
	}
	
	#klizac {
		width: 79.5%;
		height: 50px;
		top: 500px;
		right: 0;
		left: 10%;
		float: none;
		background: linear-gradient(to bottom, gray, white, gray);
	}
	
	#klizac div > span {
		display: none;
		line-height: 50px;
	}
	
	#responsive_content:after {
		line-height: 50px;
		content: '\25B2';
	}
	
	#licni_podaci {
		left: 0;
		top: 52px;
		width: 100%;
		height: 400px;
	}
	
	#licni_podaci form {
		padding: 4% 0;
	}
	
	#licni_podaci form input {
		float: none;
		display: block;
		width: 95%;
		margin-top: 0;
	}
	
	#licni_podaci form input[type=text] {
		padding: 2%;
	}
	
	#greske {
		margin: 8% 2% 5% 2%;
	}
}